    background_color: (0,0,0,0)
    background_normal: ''
    background_color: (1,1,1, 1)

<BlauButton@Button>:
    bold: True
    font_name: 'fonts/ITC_Bold.otf'
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (0.12, 0.56, 1.0, 1)
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]


