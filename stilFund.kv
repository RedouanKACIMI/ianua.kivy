<FundShot>:
    name: "fund"
    scrollfund : scrollfund
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Fundstelle"
        #<---------
        ScrollView:
            size_hint: 1, .58
            BoxLayout:
                id : scrollfund
                size_hint_x:None
                #width:self.parent.width * 4.3
                padding: 20
                spacing: 15
                orientation: 'horizontal'






        ContainerLabel:
            orientation: "horizontal"
            size_hint: 1, .2
            TexFnt:
                padding: 10, 10
                pos_hint: {'center_x': .5,'center_y': .5}
                size_hint: .2,1
                text: "Was gefunden :"
            DarkRndButton:
                size_hint: None,None
                size: (.6*self.parent.height, .6*self.parent.height)
                pos_hint: {'center_x': .5,'center_y': .5}
                ImgCenter:
                    source: "iko/shutter.png"
                on_press:
                    app.root.current = "fundcam"
            TexFnt:
                padding: 10, 10
                pos_hint: {'center_x': .5,'center_y': .5}
                size_hint: .2,1
                text: ": fotografieren."





        #<---------Footer
        FooterBox: