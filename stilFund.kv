<FundShot>:
    name: "fund"
    scrollfund : scrollfund
    fundswitch: fundswitch
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Fundstelle"
        #<---------
        ScrollView:
            size_hint: 1, .58
            BoxLayout:
                id : scrollfund
                size_hint_x:None
                #width:self.parent.width *4.3
                padding: 20
                spacing: 15
                orientation: 'horizontal'



        ContainerLabel:
            orientation: "horizontal"
            size_hint: 1, .2
            TexFnt:
                padding: 10, 10
                pos_hint: {'center_x': .5,'center_y': .5}
                size_hint: .2,1
                text: "Was gefunden :"
            DarkRndButton:
                on_press : root.switch(1)
                id: fundswitch
                size_hint: None,None
                size: (.6*self.parent.height, .6*self.parent.height)
                pos_hint: {'center_x': .5,'center_y': .5}
                ImgCenter:
                    source: "iko/shutter.png"
            TexFnt:
                padding: 10, 10
                pos_hint: {'center_x': .5,'center_y': .5}
                size_hint: .2,1
                text: ": fotografieren."





        #<---------Footer
        FooterBox:

<FundCamShot>:
    name: "fundcam"
    fundcamarea: fundcamarea
    camera0: camera0
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Camera"
        #<---------


        BoxLayout:
            id: fundcamarea
            orientation: "vertical"
            size_hint: 1, .7
            Camera:
                id: camera0
                resolution: (480, 640)
                play: False

        ContainerLabel:
            orientation: "horizontal"
            size_hint: 1, .2
            TexFnt:
                padding: 10, 10
                pos_hint: {'center_x': .5,'center_y': .5}
                size_hint: .2,1
                text: "Was gefunden :"
            DarkRndButton:
                on_press : root.capture()
                size_hint: None,None
                size: (.6*self.parent.height, .6*self.parent.height)
                pos_hint: {'center_x': .5,'center_y': .5}
                ImgCenter:
                    source: "iko/shutter.png"
            TexFnt:
                padding: 10, 10
                pos_hint: {'center_x': .5,'center_y': .5}
                size_hint: .2,1
                text: ": fotografieren."

        #<---------Footer
        FooterBox:

<FundNeuShot>:
    name: "fundneu"
    capturedfund: capturedfund
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Was gefunden ?"
        #<---------
        BoxLayout:
            padding: 20
            id: capturedfund
        ContainerLabel:
            SuchFeld:
                id: fundwasstil
                padding: 10 , 4
                hint_text: 'Was ?'
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                border_radius: 15
            SuchFeld:
                id: fundwotil
                padding: 10 , 4
                hint_text: 'Wo ?'
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                border_radius: 15
            SuchFeld:
                id: fundbeistil
                padding: 10 , 4
                hint_text: 'Bei wem ist es ?'
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                border_radius: 15
            DarkButton:
                id: fundzeigstil
                #on_release: root.waschsubmit()
                size_hint: .7, 1
                text: 'Zeigen'




        #<---------Footer
        FooterBox: