<SprechShot>:
    name: "sprech"
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Sprechstunde"
        #<---------
        ContainerLabel:
            #////Hier beginnt Content\\\\
            BoxLayout:
                size_hint: 1, .2
                padding: 20, 15
                spacing: 10
                orientation: 'horizontal'
                TexFnt:
                    id: drgudrunrefer
                    text: 'Frau Dr. Gudrun Morasch:'
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    font_size: 0.3*self.parent.height

            ScrollView:
                size_hint: 1, .9
                BoxLayout:
                    padding: 10
                    spacing: 5
                    orientation: 'vertical'
                    size_hint_y:None
                    height:self.parent.height*1.2
                    TexFnt:
                        text: root.sprechen()
                        halign: 'center'
                        valign: 'top'
                        text_size: self.size
                        font_size: 0.8*drgudrunrefer.font_size







        #<---------Footer
        FooterBox: