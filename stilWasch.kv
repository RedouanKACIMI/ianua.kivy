<Wasch3Shot>:
    name: "wasch3"
    waschbeschreibung: waschbeschreibung
    waschzinum: waschzinum
    waschbewohner:waschbewohner
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Blank"
        #<---------
        ContainerLabel:
            AbtLabel:
                size_hint: 1, .5
                Image:
                    source: 'iko/menu/wasch.png'
                    size_hint: 1, 1
                TexFnt:
                    id: waschbeschreibung
                    font_size: .08*self.parent.width
                    markup: True
            SuchFeld:
                id: waschbewohner
                padding: 10 , 4
                hint_text: 'Name'
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                size_hint: 1, .15
                border_radius: 15
            BoxLayout:
                size_hint: 1, .15
                orientation: 'horizontal'
                spacing: 10
                SuchFeld:
                    id: waschzinum
                    padding: 10 , 4
                    hint_text: 'Zim Num'
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    border_radius: 15
                DarkButton:
                    id: waschsubbtn
                    on_release: root.waschsubmit()
                    size_hint: .7, 1
                    text: 'Buchen'
            BoxLayout:
                size_hint: 1, .2




        #<---------Footer
        FooterBox: