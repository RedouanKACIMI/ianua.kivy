<WaschShot>:
    name: "wasch"
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Waschkueche"
        #<---------
        ContainerLabel:
            WeissButton:
                text: "[color=2D4059]Waschmachine 3[/color]"
                on_press: root.washbtn3()
