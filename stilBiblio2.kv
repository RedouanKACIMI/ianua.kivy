<Biblio2Shot>:
    name: "biblio2"
    bibliobox: bibliobox
    locsuchbuchfeld: locsuchbuchfeld
    #pagin: pagin
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Bibliothek"
        #<---------
        BoxLayout:
            size_hint: 1, .2
            orientation: 'vertical'
            padding: 10, 10
            spacing: 10
            TexFnt:
                padding: 20, 0
                size_hint: 1, .5
                text: 'Buch Suchen:'
                font_size: .3*self.parent.height
                halign: 'left'
                valign: 'middle'
                text_size: self.size
            BoxLayout:
                size_hint: 1, .5
                orientation: 'horizontal'
                spacing: 10
                padding: 10, 0
                SuchFeld:
                    id: locsuchbuchfeld
                    padding: 10 , 4
                    hint_text: 'Name, Autor, ISBN...'
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    size_hint: .7, 1
                    border_radius: 15
                DarkButton:
                    id: locsuchbuchbtn
                    on_press: root.locbuchbtn()
                    size_hint: .3, 1
                    text: 'GO'
        ContainerLabel:
            BiblioBox:
                id: bibliobox
                padding: 20
                spacing: 10
                orientation: 'vertical'
            BoxLayout:



        #<---------Footer
        FooterBox:
