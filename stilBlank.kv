<BlnkShot>:
    name: "blnk"
    submit: submito
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Blank"
        #<---------
        ContainerLabel:
            TextInput:
                id: submito
                font_size: (root.width**2 + root.height**2) / 13**4
                multiline: False
            DarkButton:
                text: 'send'
                #on_press:
                on_release:
                    root.manager.transition.direction = "up"
                    root.send()




        #<---------Footer
        FooterBox: