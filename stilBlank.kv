<BlnkShot>:
    name: "blnk"
    BoxLayout:
        padding: 0
        spacing: 0
        background_color: 1, 1, 1, 1
        orientation: 'vertical'
        #<---------
        Page:
            text: "Sprechstunde"
        #<---------
        ContainerLabel:
            #////Hier beginnt Content\\\\

            ScrollView:
                BoxLayout:
                    size_hint_y:None
                    height:root.height * 1.5
                    orientation:'vertical'
                    Button:
                        text:'1'
                    Button:
                        text:'2'
                    Button:
                        text:'3'

            #////Hier beginnt Content\\\\


        #<---------Footer
        BoxLayout:
            size_hint: 1, .1
            padding: 0
            spacing: 1
            orientation: 'horizontal'
            FooterButton:
                id: 'home'
                text: 'Home'
                bold: True
                font_name: 'fonts/ITC_Bold.otf'
            Footer2Button:
                id: 'tel'
                Image:
                    source: 'iko/menu/kontakt.png'
                    y: self.parent.y + (self.parent.height - self.height)/2
                    x: self.parent.x + (self.parent.width - self.width)/2
                    size: (0.5* self.parent.width, 0.5*self.parent.height)
            Footer2Button:
                id: 'Notif'
                Image:
                    source: 'iko/menu/flash.png'
                    y: self.parent.y + (self.parent.height - self.height)/2
                    x: self.parent.x + (self.parent.width - self.width)/2
                    size: (0.5* self.parent.width, 0.5*self.parent.height)
            Footer2Button:
                id: 'Setti'
                Image:
                    source: 'iko/menu/settings.png'
                    y: self.parent.y + (self.parent.height - self.height)/2
                    x: self.parent.x + (self.parent.width - self.width)/2
                    size: (0.5* self.parent.width, 0.5*self.parent.height)